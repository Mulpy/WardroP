<div class="container mb-5">
  <h1 class="text-center mt-3 lg-title"> NEW ITEMS </h1>
  <%# All List Items %>
  <div class="cards">
    <div class="container mb-5">
      <div class="row">
        <% @sorted_apparels = [] %>
        <% @apparels.each do |apparel| %>
          <% if current_user.id != apparel.user_id %>
            <% @sorted_apparels << apparel  %>
          <% end %>
        <% end %>
        <% @sorted_apparels.shuffle.take(8).each do |apparel| %>
          <div class="col-md-3">
            <div class="card">
              <div class="card-img">
                <%= cl_image_tag apparel.photo.key, class: 'img' if apparel.photo.key? %>
              </div>
