                <button type="button" class="btn-cart text-black"> add to cart +
                </button>
                <button type="button" class="btn-rent"><%= link_to "rent now ðŸ›’", apparel_path(apparel), class: 'text-decoration-none text-black' %></button>
              </div>
              <div class="card-info">
                <div class="card-subinfo">
                  <h2 class="sm-title"><%= apparel.category %></h2>
                  <div class="rating mb-2">
                    <span><i class="fas fa-star"></i></span>
                    <span><i class="fas fa-star"></i></span>
                    <span><i class="fas fa-star"></i></span>
                    <span><i class="fas fa-star"></i></span>
                    <span><i class="far fa-star"></i></span>
                  </div>
                </div>
                <p class="card-name"><%= apparel.name %></p>
                <p class="card-price"><strong>Rent from: </strong>$<%=  sprintf('%.2f', (apparel.price * 0.9)) %></p>
                <p class="card-was"><strong>Original:</strong>$<%= sprintf('%.2f', (apparel.price)) %></p>
                <p class="card-rrp"><strong>Refernce Retail Price:</strong> $<%= apparel.price * 100 %></p>
