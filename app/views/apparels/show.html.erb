<div class="landing w-100" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('landing_page1.jpg') %>);">
  <div class="container text-center py-5">
    <h1 class="display-4 text-white"><strong>Where Chaos Bows Out and Style Steps In!</strong></h1>
  </div>
</div>

<div class="container mt-5">
  <div class="row ms-3">
  <div class="col-md-6">
      <div><%= cl_image_tag @apparel.photo.key, class: 'img img-fluid custom-img' if @apparel.photo.key? %></div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= @apparel.name %></h5>
          <p class="card-text"><strong>Size:</strong> <%= @apparel.size %></p>
          <p class="card-text"><strong>Category:</strong> <%= @apparel.category %></p>
          <p class="card-text"><strong>Price:</strong> <%= @apparel.price %></p>
          <p class="card-text"><%= @apparel.overview %></p>
          <%= render "rentals/form" %>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="d-flex justify-content-center my-5">
  <%= link_to "Home", apparels_path, class: "btn btn-primary mx-3"%>
</div>
