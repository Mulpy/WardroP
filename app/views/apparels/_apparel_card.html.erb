<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create New Listing</h3>
        <%= simple_form_for @apparel do |f| %>
          <%= f.input :name, placeholder: 'Dress' %>
          <%= f.input :size , as: :radio_buttons, collection: ["xxs",  "xs",  "s",  "m",  "l",  "xl", "xxl"] %>
          <%= f.input :category, as: :select, collection: ["business", "party", "holiday", "wedding", "casual", "other"] %>
          <%= f.input :price, label: "Type the price<strong>(per day $)</strong>".html_safe %>
          <%= f.input :overview, placeholder: 'Describe your item' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit "Create!", class:'btn btn-info' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
