<div class="col-4">
  <div class="card-product <%=rental.status%>">
    <%= cl_image_tag rental.apparel.photo.key, class: 'img' if rental.apparel.photo.key? %>
    <div class="card-product-infos">
      <%= link_to rental.apparel.name.capitalize, apparel_path(rental.apparel), class: 'text-decoration-none' %>
      <p>Price: <strong>$<%= sprintf('%.2f', ((rental.apparel.price * 0.9) * (rental.end_date - rental.start_date)))%></strong></p>
      <p>Size: <strong><%= rental.apparel.size.upcase %></strong></p>
      <%# <div class="d-flex justify-content-between"> %>
      <p>Rental Start: <strong><%= rental.start_date %></strong></p>
      <p>Rental End: <strong><%= rental.end_date %></strong></p>
      <div class="mt-3">
        <h6><strong>Supplier: <%= @requester.username.upcase %></strong></h6>
      </div>
      <% if rental.status == "accepted" %>
        <%= simple_form_for rental do |f| %>
          <%= f.input :status, as: :hidden, input_html: { value: 'delivered'} %>
          <%= f.submit 'Delivered?', class: 'btn btn-primary' %>
        <% end %>
      <% else %>
        <!-- Display Status-->
        <p class='booking-tag'><%= rental.status.upcase %></p>
      <% end %>
      <%# </div> %>
    </div>
  </div>
</div>
