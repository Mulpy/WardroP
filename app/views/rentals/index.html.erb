<%= render "rental_landing" %>
<div class="container mb-5">
  <div class="text-center mt-3 lg-title">
    <h1><%= current_user.username.upcase %>'S RENTAL REQUESTS</h1>
  </div>
  <div class="row">
    <% @rentals.sort_by{ |rental| rental.start_date }.each do |rental| %>
      <% if current_user.id == rental.user_id %>
        <% @clothing = Apparel.find(rental.apparel_id) %>
        <% @requester = User.find(@clothing.user_id) %>
        <%= render 'rental_card', rental: rental%>
      <% end %>
    <% end %>
  </div>
</div>
