<div class=“card”>
  <h6>Please confirm your rental period:</h6>
  <%= simple_form_for [@apparel, @rental]  do |f| %>
    <%= f.input :start_date, html5: true %>
    <%= f.input :end_date, html5: true %>
    <div class="d-flex justify-content-between mt-4 mb-3">
      <%= link_to "Go back", apparels_path, class: "btn btn-secondary btn-width"%>
      <%= f.submit "Rent now", class: "btn btn-info btn-width" %>
    </div>
  <% end %>
</div>
