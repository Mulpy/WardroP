<div class="col-4">
  <div class="card-product <%=rental.status%>">
    <%= cl_image_tag rental.apparel.photo.key, class: 'img' if rental.apparel.photo.key? %>
    <div class="card-product-infos">
      <%= link_to rental.apparel.name.capitalize, apparel_path(rental.apparel), class: 'text-decoration-none' %>
      <p>Price: <strong>$<%= sprintf('%.2f', (rental.apparel.price * 2.45))%></strong></p>
      <p>Size: <strong><%= rental.apparel.size.upcase %></strong></p>
      <%# <div class="d-flex justify-content-between"> %>
      <p>Rental Start: <strong><%= rental.start_date %></strong></p>
      <p>Rental End: <strong><%= rental.end_date %></strong></p>
      <div class="mt-3">
        <h6><strong>FROM: <%= User.find(rental.user_id).username.upcase %></strong></h6>
      </div>
      <div class="d-flex">
        <% if rental.status.nil? %>
          <%= simple_form_for rental do |f| %>
            <%= f.input :status, as: :hidden, input_html: { value: 'accepted'} %>
            <%= f.submit 'Accept', class: 'btn btn-info' %>
          <% end %>
          <%= simple_form_for rental do |f| %>
            <%= f.input :status, as: :hidden, input_html: { value: 'rejected'} %>
            <%= f.submit 'Reject', class: 'btn btn-light' %>
          <% end %>
        <% else %>
          <!-- Display Status-->
          <p class='booking-tag'><%= rental.status %></p>
        <% end %>
      </div>
      <%# </div> %>
    </div>
  </div>
</div>
